<%- include ('partials/header'); -%>

  	
  <div style="padding-top: 100px;"> 

    <h2 style="text-align: center; font-weight: 700;"> Edit " <%= blog.title %> " Blog</h2>

    <div style="width: 40%; margin: 45px auto;">


	<form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
			
			<div class="form-group">
			<div>
			<lable>Blog Title</lable></div>
			<input class="form-control" type="text" value="<%= blog.title %>" name="blog[title]" required></div>

			<div class="form-group">
			<div>
			<lable>Image</lable></div>
			<input class="form-control" type="text" value="<%= blog.image %>" name="blog[image]" required></div>

			<div class="form-group">
			<div>
			<lable>Blog Content</lable></div>
			<textarea name="blog[body]" style="height:50%; width:100%" required><%= blog.body %></textarea>
			</div>
			<div class="form-group"><button class="btn btn-lg btn-block btn-primary">Submit!</button> </div>

			

		</form>
       </div>
     </div>
   
<%- include ('partials/footer'); -%>